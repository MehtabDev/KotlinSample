<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>


    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!--Create style for animation from bottom to top on dialog-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="cardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
    </style>

    <style name="textStyleBold">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <!--    <item name="android:textStyle">bold</item>-->
        <item name="font_name">bold</item>
    </style>

    <style name="textStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="font_name">regular</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ContainerStyle">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="Small_Button_white">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="font_name">bold</item>
        <item name="android:background">@drawable/small_button_background_white</item>
    </style>

    <style name="Small_Button_grey">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="font_name">bold</item>
        <item name="android:background">@drawable/small_button_background_grey</item>
    </style>

    <style name="Small_Button_red">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="font_name">bold</item>
        <item name="android:background">@drawable/small_button_background_red</item>
    </style>

    <style name="Small_Button_green">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/green_color</item>
        <item name="font_name">bold</item>
        <item name="android:background">@drawable/small_button_background_green</item>
    </style>

    <style name="item_name_style">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="font_name">bold</item>
    </style>

    <style name="regular_text_style">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="font_name">regular</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#FFC107</item>
        <item name="colorControlActivated">#9C27B0</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/red_button_background</item>
        <item name="android:textSize">30sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/red_button_background</item>
        <item name="font_name">bold</item>
        <item name="colorControlNormal">@color/red_button_background</item>
        <item name="colorControlActivated">@color/red_button_background</item>
    </style>
</resources>

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/seperator_background"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="true"
        app:layout_behavior="com.mehtabkotlin.custom.BOutOfScreenBottomSheetBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.mehtabkotlin.custom.BCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Add to wishlist"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <com.mehtabkotlin.custom.BCustomButton
                android:id="@+id/bottom_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/red_button_background"
                android:text="BUY NOW"
                android:textColor="@color/white"
